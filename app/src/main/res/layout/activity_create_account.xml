<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_create_acc"
    tools:context=".CreateAccountActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_createAcc_usuario_"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="140dp"
        android:hint="@string/usuario"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="0sp"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:paddingEnd="0sp"
        android:background="@drawable/layout_edit_text_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_createAcc_email"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:hint="@string/emailLogin"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="0sp"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:paddingEnd="0sp"
        android:background="@drawable/layout_edit_text_input"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_createAcc_usuario_"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_text_createAcc_usuario_"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_createAcc_usuario_" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_createAcc_password"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:hint="@string/senha"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="0sp"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:paddingEnd="0sp"
        android:background="@drawable/layout_edit_text_input"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_createAcc_email"
        app:layout_constraintStart_toStartOf="@+id/edit_text_createAcc_email"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_createAcc_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_createAcc"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/layout_button_login_activity"
        android:text="@string/buttonCreate"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_createAcc_password"
        app:layout_constraintStart_toStartOf="@+id/edit_text_createAcc_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_createAcc_password" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="@string/usuario"
        app:layout_constraintStart_toStartOf="@+id/edit_text_createAcc_usuario_"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="28dp"
        android:text="@string/emailLogin"
        app:layout_constraintStart_toStartOf="@+id/edit_text_createAcc_usuario_"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_createAcc_usuario_" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="28dp"
        android:text="@string/senha"
        app:layout_constraintStart_toStartOf="@+id/edit_text_createAcc_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_createAcc_email" />

</androidx.constraintlayout.widget.ConstraintLayout>