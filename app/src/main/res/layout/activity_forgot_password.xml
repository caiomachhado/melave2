<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_forgot_pass"
    tools:context=".ForgotPasswordActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_forgotPass"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/layout_button_login_activity"
        android:text="@string/forgotPasswordSubmit"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_email_forgotPass"
        app:layout_constraintStart_toStartOf="@+id/edit_text_email_forgotPass"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email_forgotPass" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_email_forgotPass"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/layout_edit_text_input"
        android:hint="@string/emailLogin"
        android:paddingStart="20sp"
        android:paddingLeft="20sp"
        android:paddingTop="0sp"
        android:paddingEnd="0sp"
        android:paddingRight="0sp"
        android:paddingBottom="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>